<div class="vh-100 d-flex justify-content-center align-items-center">
    <div>
        <div class="card p-4 mb-3" style="width: 28rem;">
            <div class="card-body">
                <div class="instagram-logo-link mb-3"></div>
                <p class="text-center text-secondary fs-8 fw-semibold">Forgot your password?</p>
                <div class="d-flex justify-content-center">
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                  
                    <div class="mb-3">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                    </div>
                  
                    <div class="actions">
                      <%= f.submit "Send me reset password instructions", class:"btn btn-primary insta-primary w-100" %>
                    </div>
                  <% end %>
                </div>

                <hr>
                <div class="d-flex justify-content-center">
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class:"dark-link" %><br />
                </div>
            </div>
        </div>

        <div class="card py-2" style="width: 28rem;">
            <div class="card-body">
                <p class="mb-0 fs-6 text-center">Don't have an account? <%= link_to "Sign up", new_user_registration_path, class:"standard-link" %></p>
            </div>
        </div> 

    </div>   
</div>
