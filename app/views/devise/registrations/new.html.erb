<div class="vh-100 d-flex justify-content-center align-items-center">
    <div>
        <div class="card p-4 mb-3" style="width: 28rem;">
            <div class="card-body">
                <div class="instagram-logo-link"></div>
                <p class="text-center text-secondary fs-8 fw-semibold">Sign up to see photo and videos from your friends.</p>

                <hr>
                <div class="d-flex justify-content-center">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"w-100"}) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="mb-3">
                      
                      <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email", class: "form-control" %>
                    </div>

                    <div class="mb-3">
                      <%= f.password_field :password, placeholder:"Password", autocomplete: "new-password", class: "form-control" %>
                    </div>

                    <div class="mb-3">
                      <%= f.password_field :password_confirmation, placeholder:"Password Confirmation", autocomplete: "new-password", class: "form-control" %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Sign up", class:"btn btn-primary insta-primary w-100" %>
                    </div>
                  <% end %>
                </div>
              </div>
        </div>

        <div class="card py-2" style="width: 28rem;">
            <div class="card-body">
                <p class="mb-0 fs-6 text-center">Have an account? <%= link_to "Log in", root_path, class:"standard-link" %></p>
            </div>
        </div> 

    </div>   
</div>